{
  "env": {
    "jest": true,
    "node": true,
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module" 
  },
  "overrides": [
    {
      "files": ["**/*.js", "**/*.cjs", "**/*.mjs"],
      "excludedFiles": ["node_modules/**", "coverage/**", "src/__test__/**"],
      "rules": {
        "prefer-const": "warn",
        "no-constant-binary-expression": "error"
      }
    }
  ]
}